{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "openai/gpt-5.2-codex",
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false
    },
    "yaak": {
      "type": "remote",
      "url": "http://127.0.0.1:64343/mcp",
      "enabled": false
    }
  },
  "keybinds": {
    "leader": "ctrl+o"
  },
  "agent": {
    "build": {
      "permission": {
        "bash": {
          "git commit*": "deny",
          "git add*": "deny",
          "git push*": "deny",
          "git reset*": "deny",
          "git rebase*": "deny",
          "git merge*": "deny",
          "git checkout*": "deny",
          "git switch*": "deny",
          "git restore*": "deny",
          "git stash*": "deny",
          "git cherry-pick*": "deny",
          "git revert*": "deny",
          "git rm*": "deny",
          "git mv*": "deny",
          "git clean*": "deny"
        }
      }
    }
  }
}
